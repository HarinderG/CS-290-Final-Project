<main class="content">

  <section id="posts">

    {{#each apiData}}
        {{> movieCard}}
    {{/each}}

  </section>

</main>

<button type="button" id="advanced-search-button">Find</button>

<div id="modal-backdrop" class="hidden"></div>
<div id="advanced-search-modal" class="hidden">
  <div class="modal-dialog">
    <div class="modal-header">
      <h3>Find a Movie</h3>

      <button type="button" id="modal-close-top" class="modal-hide-button">&times;</button>
    </div>

    <div class="modal-body">

      <div class="post-input-element">
        <label for="post-text-input">Movie Title</label>
        <input type="text" id="post-text-input"></input>
      </div>

      <div class="post-input-element">
        <label for="post-genre-input">Movie Genre</label>
        <input type="text" id="post-genre-input">
      </div>

      <div class="post-input-element">
        <label for="post-year-input">Movie Year</label>
        <input type="number" id="post-year-input">
      </div>

      <div class="post-input-element">
        <label for="post-rated-input">Movie Rated</label>
        <input type="text" id="post-rated-input">
      </div>

      <div class="post-input-element">
        <label for="post-actor-input">Movie Actor</label>
        <input type="text" id="post-actor-input"></input>
      </div>

      <div class="post-input-element">
        <label for="post-metascore-input">Movie Metascore</label>
        <input type="text" id="post-metascore-input">
      </div>

      <div class="post-input-element">
        <label for="post-imdb-input">Movie IMBD Rating</label>
        <input type="number" id="post-imdb-input">
      </div>

    <div class="modal-footer">
      <button type="button" id="modal-cancel" class="modal-hide-button action-button">Cancel</button>
      <button type="button" id="modal-accept" class="action-button">Search</button>
    </div>
  </div>
</div>
